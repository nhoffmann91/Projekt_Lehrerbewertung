<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.berufsschule.bewertungsApp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.berufsschule.bewertungsApp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.berufsschule.bewertungsApp.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="de.berufsschule.bewertungsApp.TeacherChoice"
            android:label="@string/title_activity_teacher_choice" >
        </activity>
        <activity
            android:name="de.berufsschule.bewertungsApp.RatingActivity"
            android:label="@string/title_activity_rating" >
        </activity>
        <activity
            android:name="de.berufsschule.bewertungsApp.RankingActivity"
            android:label="@string/title_activity_ranking" >
        </activity>
    </application>

</manifest>
